<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayUserInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-364dp">


        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/icTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center" />

        <TextView
            android:id="@+id/hospitalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center" />

        <TextView
            android:id="@+id/vaccineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center" />


        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center"
            />


        <Space
            android:layout_width="match_parent"
            android:layout_height="305dp" />

        <Button
            android:id="@+id/appointmentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="Change Appointment" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="148dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/appointmentBtn"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-88dp"
            app:menu="@menu/bottom_navigation_menu" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>